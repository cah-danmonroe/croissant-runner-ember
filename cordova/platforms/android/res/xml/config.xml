<?xml version='1.0' encoding='utf-8'?>
<widget id="com.croissantthepizzacat.www" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="webView" value="org.crosswalk.engine.XWalkWebViewEngine" />
    <preference default="15+" name="xwalkVersion" />
    <preference default="--disable-pull-to-refresh-effect" name="xwalkCommandLine" />
    <preference default="embedded" name="xwalkMode" />
    <preference default="true" name="xwalkMultipleApk" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/android/drawable-mdpi/appicon.png" />
    <icon density="hdpi" src="res/android/drawable-hdpi/appicon.png" />
    <icon density="xhdpi" src="res/android/drawable-xhdpi/appicon.png" />
    <splash src="res/android/default.png" />
    <splash density="land-hdpi" src="res/android/res-notlong-land-hdpi/default.png" />
    <splash density="land-ldpi" src="res/android/res-notlong-land-ldpi/default.png" />
    <splash density="land-mdpi" src="res/android/res-notlong-land-mdpi/default.png" />
    <splash density="land-xhdpi" src="res/android/res-notlong-land-xhdpi/default.png" />
    <splash density="land-xxhdpi" src="res/android/res-notlong-land-xxhdpi/default.png" />
    <splash density="land-xxxhdpi" src="res/android/res-notlong-land-xxxhdpi/default.png" />
    <splash density="port-hdpi" src="res/android/res-notlong-port-hdpi/default.png" />
    <splash density="port-ldpi" src="res/android/res-notlong-port-ldpi/default.png" />
    <splash density="port-mdpi" src="res/android/res-notlong-port-mdpi/default.png" />
    <splash density="port-xhdpi" src="res/android/res-notlong-port-xhdpi/default.png" />
    <splash density="port-xxhdpi" src="res/android/res-notlong-port-xxhdpi/default.png" />
    <splash density="port-xxxhdpi" src="res/android/res-notlong-port-xxxhdpi/default.png" />
    <name>Croissant</name>
    <description>
        Help Croissant collect pizza and avoid naps by jumping over her cat bed!
    </description>
    <author email="matt@mtmckenna.com" href="https://www.mtmckenna.com">
        Matt McKenna
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="all" />
    <icon src="res/icon.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="xwalkVersion" value="15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
